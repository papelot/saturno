<% provide(:title, "Accedi") %>
<h1>Entra in SaturnX</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(dimenticata la password?)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Ricordami su questo pc</span>
      <% end %>

      <%= f.submit "Accedi", class: "btn btn-primary" %>
    <% end %>

    <p>Nuovo utente? <%= link_to "Registrati adesso!", signup_path %></p>
  </div>
</div>